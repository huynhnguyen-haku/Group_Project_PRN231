<style>
    .flagged-comment .accordion-button {
        background-color: #ffcccc; /* Light red background */
        color: #ff0000; /* Red text color */
    }

        .flagged-comment .accordion-button:hover {
            background-color: #ff9999; /* Lighter red background on hover */
        }

    .media {
        display: flex;
        align-items: flex-start;
    }

        .media img {
            margin-right: 15px;
        }

    .embed-responsive {
        position: relative;
        display: block;
        width: 100%;
        padding: 0;
        overflow: hidden;
        padding-top: 56.25%;
    }

    .embed-responsive-item {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border: 0;
    }
</style>

<h3>Product Feedbacks</h3>

<div class="container mt-5">
    <div class="accordion mb-3" id="feedbackAccordion1">
        <div class="accordion-item flagged-comment">
            <h2 class="accordion-header" id="headingOne1">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne1" aria-expanded="false" aria-controls="collapseOne1">
                    Feedback Card 1
                </button>
            </h2>
            <div id="collapseOne1" class="accordion-collapse collapse" aria-labelledby="headingOne1" data-bs-parent="#feedbackAccordion1">
                <div class="accordion-body">
                    <h5 class="card-title">User Feedback 1</h5>
                    <p class="card-text">This is some brief feedback from the user 1.</p>
                    <h5>Detailed Feedback</h5>
                    <p>Here is the detailed feedback provided by the user, including more text, images, and videos.</p>
                    <div class="media mb-3">
                        <img src="https://via.placeholder.com/150" class="mr-3" alt="Example image">
                        <div class="media-body">
                            <h5 class="mt-0">Image Title</h5>
                            Additional details about the image.
                        </div>
                    </div>
                    <div class="embed-responsive embed-responsive-16by9">
                        <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/dQw4w9WgXcQ" allowfullscreen></iframe>
                    </div>
                    <div class="my-3 d-flex justify-content-end gap-4">
                        <button class="btn btn-primary" type="button">Reply Feedback</button>
                        <button class="btn btn-outline-danger" type="button" data-bs-toggle="modal" data-bs-target="#warningModal">Remove Feedback</button>

                        <!-- Modal -->
                        <div class="modal fade" id="warningModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="staticBackdropLabel">Heads Up!!</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Are you sure you want to remove the feedback?</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <button type="button" class="btn btn-danger">Remove Feedback</button>
                                    </div>
                                </div>
