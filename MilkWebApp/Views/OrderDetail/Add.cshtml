@using MilkData.Models
@{
    ViewData["Title"] = "Add";
}

@model OrderDetail

<div class="form-group row">
    <div class="col-md-6">
        <label for="1">OrderDetailId</label>
        @Html.HiddenFor(model => model.OrderDetailId)
    </div>
</div>
<div class="form-group row">
    <div class="col-md-6">
        <label for="1">Quantity:</label>
        @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="col-md-6">
        <label for="1">ProductId:</label>
        @Html.EditorFor(model => model.ProductId, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="col-md-6">
        <label for="1">OrderId:</label>
        @Html.EditorFor(model => model.OrderId, new { htmlAttributes = new { @class = "form-control" } })
    </div>
</div>
