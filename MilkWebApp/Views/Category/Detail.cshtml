@using MilkData.Models
@{
    ViewData["Title"] = "Detail";
}

@model Category

<div class="form-group row">
    <div class="col-md-6">
        @Html.HiddenFor(model => model.CategoryId)
    </div>
</div>
<div class="form-group row">
    <div class="col-md-6">
        <label for="1">Category Name:</label>
        @Html.DisplayFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="col-md-6">
        <label for="1">Category Code:</label>
        @Html.DisplayFor(model => model.CategoryCode, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="col-md-6">
        <label for="1">Description:</label>
        @Html.DisplayFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="col-md-6">
        <label for="1">ImageUrl:</label>
        @Html.DisplayFor(model => model.ImageUrl, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="col-md-6">
        <label for="1">Status:</label>
        @Html.DisplayFor(model => model.Status, new { htmlAttributes = new { @class = "form-control" } })
    </div>
</div>
