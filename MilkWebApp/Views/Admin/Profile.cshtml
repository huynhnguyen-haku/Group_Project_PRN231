@{
    Layout = "~/Views/Admin/Layout/_AdminLayout.cshtml";
}

<form class="m-5">
    <div class="mb-3">
        <label for="fullname" class="form-label outfit-regular fs-4">Full name</label>
        <div class="d-flex">
            <i class="fa fa-user border rounded-3 text-secondary"
               style="padding: 10px; min-width: 50px; text-align: center;"></i>
            <input type="text" id="fullname" class="form-control outfit-regular fs-5" placeholder="Enter your fullname" aria-describedby="emailExc" autocomplete="on" required value="Jane Cooper" />
        </div>
        <p id="emailExc" class="form-text text-danger">This is error/exception</p>
    </div>
    <div class="d-flex w-100 justify-content-between">
        <div class="mb-3 w-100 me-3">
            <label for="email" class="form-label outfit-regular fs-4">Email</label>
            <div class="d-flex">
                <i class="fa fa-envelope border rounded-3 text-secondary"
                   style="padding: 10px; min-width: 50px; text-align: center;"></i>
                <input type="email" id="email" class="form-control outfit-regular fs-5" placeholder="Enter your email" aria-describedby="emailExc" autocomplete="on" required />
                <span class="input-group-text" id="basic-addon2">@@email.com</span>
            </div>
            <p id="emailExc" class="form-text text-danger">This is error/exception</p>
        </div>
        <div class="mb-3 w-100 ms-3">
            <label for="phonenumber" class="form-label outfit-regular fs-4">Phone number</label>
            <div class="d-flex">
                <i class="fa fa-envelope border rounded-3 text-secondary"
                   style="padding: 10px; min-width: 50px; text-align: center;"></i>
                <input type="text" id="phonenumber" class="form-control outfit-regular fs-5" placeholder="Enter your phone number" aria-describedby="emailExc" autocomplete="on" required value="0987654321" />
            </div>
            <p id="emailExc" class="form-text text-danger">This is error/exception</p>
        </div>
    </div>
    <div class="mb-3">
        <label for="address" class="form-label outfit-regular fs-4">Address</label>
        <div class="d-flex">
            <i class="fa fa-map-marker border rounded-3 text-secondary"
               style="padding: 10px; min-width: 50px; text-align: center;"></i>
            <input type="text" id="address" class="form-control outfit-regular fs-5" placeholder="Enter your address"
                   aria-describedby="passExc" />
        </div>
        <p id="passExc" class="form-text text-danger">This is password error/exception</p>
    </div>

    <div class="d-flex justify-content-center align-items-center">
        <button type="submit" class="w-50 btn btn-hover outfit-bold fs-4" style="background-color: #F9A8D4;">
            Save
        </button>
    </div>
</form>